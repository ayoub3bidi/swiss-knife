# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Configuration files
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Makefiles
Makefile text eol=lf
*.mk text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# CI/CD files
*.yml text eol=lf
*.yaml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.gz binary
*.bz2 binary
*.xz binary
*.7z binary
*.rar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.pdf binary

# Python bytecode
*.pyc binary
*.pyo binary
*.pyd binary

# Wheel files
*.whl binary

# Archives
*.egg binary
*.egg-info/* binary

# Jupyter notebooks (treat as text but don't normalize line endings)
*.ipynb text -diff

# Large files that should use Git LFS (if needed)
# *.psd filter=lfs diff=lfs merge=lfs -text
# *.ai filter=lfs diff=lfs merge=lfs -text

# Language-specific settings
*.py diff=python
*.pyx diff=python
*.pyi diff=python

# Export ignore (files not included in git archive)
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
docs/ export-ignore
*.md export-ignore
Makefile export-ignore
tox.ini export-ignore
.pre-commit-config.yaml export-ignore
